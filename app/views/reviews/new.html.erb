<h1>Add a new review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>
  <div>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
